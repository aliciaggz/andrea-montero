---
import Header from '@/components/molecules/Header.astro';

import flowerLeft from '@/assets/flower-left.svg';
import flowerRight from '@/assets/flower-right.svg';

import '../styles/global.scss';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Andrea</title>
	</head>
	<body>
		<Header/>
		<div class="container">
			<img class="container__flower container__flower--left" src={flowerLeft.src} alt="Flor izquierda" />
			<img class="container__flower container__flower--right" src={flowerRight.src} alt="Flor derecha" />
		
			<slot />
		</div>
	</body>
</html>

<style lang="scss" scoped>
	.container {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
	overflow-x: hidden; /* recorta hijos absolutos que sobresalgan */


  &__flower {
    position: absolute;
    top: 8%;
    transform: translateY(-50%);
		width: clamp(8rem, 30vw, 22rem);
		height: auto;

		@media (max-width: 768px) {
    width: clamp(4rem, 20vw, 10rem); /* reducir tama√±o */
		}

		@media (max-width: 480px) {
     /* evitar que sobresalgan */
			width: clamp(3rem, 15vw, 6rem);
		}

    &--left {
      left: 0; 
    }

    &--right {
      right: 0;
    }
  }
}

</style>
