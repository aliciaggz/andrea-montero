    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 18rem;
    margin-bottom: 12rem;

    @media (max-width: 480px) {
      margin-top: 8rem;
      margin-bottom: 8rem;

    }

    &__image {
      width: 3.35rem;
    }

    &__title {
      font-size: $font-size-xl;
      font-weight: 100;
      margin-top: 2rem;
      margin-bottom: 2rem;
    }
   
