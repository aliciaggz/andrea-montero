        right: -5rem;
        @media (max-width: 480px) {
          top: -4rem;
          right: -1rem;
        }
      }

      &__note{
        position: absolute;
        top: -5.5rem;
        right: -9rem;
        transform: rotate(12deg);
        color: $color-red;
        font-family: $font-libre;
        font-size: $font-size-base;
        @media (max-width: 480px) {
