import pomodog from '@/assets/pomodog.png';

const projects = [
  {
    id: 1,
    title: 'Proyecto Aurora',
    image: '/projects/project1.jpg',
    color: 'var(--color-yellow-light)',
    link: '/proyectos/aurora',
  },
  {
    id: 2,
    title: 'Proyecto N√©bula',
    image: pomodog.src,
    color: 'var(--color-blue-light)',
    link: '/proyectos/nebula',
  },
  {
    id: 3,
    title: 'Proyecto Lumen',
    image: '/projects/project2.jpg',
    color: 'var(--color-yellow-light)',
    link: '/proyectos/lumen',
  },
  {
    id: 4,
    title: 'Proyecto Aurora',
    image: '/projects/project1.jpg',
    color: 'var(--color-red-light)',
    link: '/proyectos/aurora',
  },
  {
    id: 5,
    title: 'Proyecto N√©bula',
    image: '/projects/project3.jpg',
    color: 'var(--color-yellow-light)',
    link: '/proyectos/nebula',
  },
  {
    id: 6,
    title: 'Proyecto Lumen',
    image: '/projects/project2.jpg',
    color: 'var(--color-red-light)',
    link: '/proyectos/lumen',
  },
];

--- 
<section class="projects" id="projects">

    <img class="projects__image" src={sun.src} alt="sun" />

    <h2 class="projects__title">Entra en mi hogar digital</h2>
    <div class="projects__grid">

      {projects.map((project) => (
        <a
          href={project.link}
          class="project-card"
          style={`--bg-color: ${project.color}`}
        >
          <img src={project.image} alt={project.title} />
          <div class="project-card__overlay"></div>
          <h3 class="project-card__title">{project.title}</h3>
        </a>
      ))}
    </div>
</section>

<style lang="scss" scoped>
  .projects {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 5rem;
    margin-inline: 6rem;

    &__image {
      width: 2.5rem;
    }

  &__title {
    font-size: 1.5rem;
    font-weight: 100;
    margin-top: 2rem;
  }

  &__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    width: 100%;
    margin-top: 4rem;
    margin-bottom: 6rem;
  }
}

.project-card {
  position: relative;
  height: 250px;
  overflow: hidden;
  background-color: var(--bg-color);
  background-size: cover;
  background-position: center;
  cursor: pointer;
  transition: transform 0.4s ease, box-shadow 0.4s ease;

  // &:hover {
  //   transform: scale(1.05);
  //   box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  // }

  // &__overlay {
  //   position: absolute;
  //   inset: 0;
  //   background-color: var(--overlay-color, rgba(0,0,0,0.3));
  //   transition: background-color 0.4s ease;
  // }

  &:hover .project-card__overlay {
    background-color: rgba(0, 0, 0, 0.3);
  }

  &__title {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    color: #fff;
    font-size: 1.2rem;
    font-weight: 400;
    z-index: 2;
  }
}

/* üî∏ Responsivo */
@media (max-width: 900px) {
  .projects__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 600px) {
  .projects__grid {
    grid-template-columns: 1fr;
  }
}

.project-card img {
  width: 100%;
  height: 100%;
  object-fit: cover; // ‚ùå se asegura que cubra todo sin deformarse
  display: block;
}
</style>