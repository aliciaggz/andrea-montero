    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    &__image {
      width: 2.5rem;
    }

    &__title {
      font-size: $font-size-xl;
      font-weight: 100;
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    &__text {
      font-family: $font-poppins;
      font-size: $font-size-md;
      font-weight: 300;
      margin-bottom: 5rem;
      text-align: center;

      @media (max-width: 480px) {
        font-size: $font-size-base;
      }

      &--1 {
        width: 70%;
        margin-bottom: 5rem;
        @media (max-width: 480px) {
          width: 100%;
          padding-inline: 2.5rem;
        }
      }

      &--2 {
        width: 65%;
        margin-bottom: 5rem;

        @media (max-width: 480px) {
          width: 100%;
          padding-inline: 2.5rem;
        }
      }
    }
    

    &__pictures {
      position: relative;
      display: flex;
      justify-content: center; 
      align-items: center; 
      gap: 2rem; 
      margin-bottom: 2rem;

      @media (max-width: 480px) {
