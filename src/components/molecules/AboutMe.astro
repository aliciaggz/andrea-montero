        gap: 0.5rem; 
        margin-inline: 2.5rem;
      }

      &__photo {
        width: 14%;
        height: auto;
        object-fit: cover; 
        
        @media (max-width: 480px) {
          width: 100%;
        }
          
        &--1 {
        }

        &--2 {
          padding-top: 3rem;
          @media (max-width: 480px) {
            padding-top: 0;
          }
        }

        &--3 {
          padding-bottom: 1.5rem;
        }
        &--4 {
          padding-bottom: 8rem;
          
          @media (max-width: 480px) {
            padding-bottom: 0;
          }
        }

        &--6 {
          padding-top: 5rem;
          width: 18%;
          @media (max-width: 480px) {
            width: 100%;
            padding-top: 0;
          }
        }
        &--7 {
          @media (max-width: 480px) {
            margin-left: 5rem;
          }
        }
      }

      &__arrow {
        position: absolute;
        width: 2.5rem;

        &--1 {
          top: 4rem;
          left: 32%;
          transform: rotate(145deg);
        }

        &--2 {
          bottom: 2.5rem;
          left: 48.5%;
          transform: rotate(35deg);
        }

        &--3 {
          top: 2rem;
          right: 31%;
          transform: rotate(-88deg);
        }

        @media (max-width: 480px) {
          display: none;
        }
      }

      &__arrow-2 {
        position: absolute;
        width: 2.5rem;

        &--1 {
          top: 5rem;
          left: 38%;
          transform: rotate(140deg);
        }

        &--2 {
          bottom: 2rem;
          right: 38%;
          transform: rotate(35deg);
        }
        @media (max-width: 480px) {
          display: none;
        }
      }

    }
  }
</style>