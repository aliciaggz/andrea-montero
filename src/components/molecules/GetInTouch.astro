---
import Peace from '@/assets/peace.svg';

---

<div class="contact">
  <div class="contact__container">
    <Peace class="contact__image" />
    <p class="contact__ask">¿Crees que vibramos?</p>
    <p class="contact__text">Get in touch </p>
  </div>
  <div class="contact__labels-container">
    <a href="#projects" class="contact__labels-container__label">proyectos</a>
    <a href="https://www.linkedin.com/in/andrea-montero-hernandez/" target="_blank" class="contact__labels-container__label">linkedin</a>
    <a href="#capitulos" class="contact__labels-container__label">experiencia</a>
  </div>
</div>

<style lang="scss" scoped>
  .contact {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 5rem 2.5rem;
    margin-bottom: 10rem;

    &__container {
      background-color: $color-red;
      color: $color-white;
      width: 100%;
      height: 31.5rem;
      border-radius: 4rem;
      text-align: center;
      font-family: $font-poppins;
      padding-inline: 6rem;

      &:hover {
        background-color: $color-turquoise;
        color: $color-black;
        cursor: pointer;
      }
    }

    &__image {
      width: 4rem;
      height: auto;
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    &__ask {
      font-size: $font-size-xl;
      margin: 0;
    }

    &__text {
      margin: 0;
      font-size: 11.25rem;
    }

    &__labels-container{
      display: grid;
      grid-template-columns: auto auto auto auto;
      grid-gap: 2rem;
      font-family: $font-poppins;


      &__label {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: $color-red-light;
        border-radius: 0 0 15px 15px;
        text-decoration: none;
        color: $color-black;
        width: 8rem;
        height: 5rem;
        font-size: $font-size-base;
        transition: all 0.3s ease;

        &:hover {
          height: 5.5rem;
          background-color: $color-turquoise;
        }
      }
    }

    /* Tablets */
    @media (max-width: 1024px) {
      margin: 2rem 0.5rem;

      &__text {
        font-size: 1.25rem;
        width: 70%;
        top: 50%;
      }
    }

    /* Móviles */
    @media (max-width: 640px) {
      margin: 2rem 0.5rem;

      &__container {
        width: 21rem;
        height: 12rem;
        padding: 0;
      }

      &__image {
        width: 1rem;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
      }

      &__ask {
        font-size: $font-size-md;
        width: 100%;
        margin-bottom: 0.5rem;
      }

      &__text {
        font-size: $font-size-sm;
        width: 100%;
      }

      &__labels-container{
      grid-template-columns: auto auto auto;
      grid-gap: 0.5rem;


      &__label {
        width: 4.5rem;
        height: 3rem;
        font-size: $font-size-xs;
      }
    }
    }
  }
</style>