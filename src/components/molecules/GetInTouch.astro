---
import Peace from '@/assets/peace.svg';

// Tu correo
const email = "andreamonterher@gmail.com";
const subject = "Hola Andrea";
const body = "¡Hola! Vi tu portafolio y me encantaría hablar contigo.";
const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${email}&su=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
const mailtoUrl = `mailto:${email}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;

---
<script>
  document.querySelectorAll('.contact__container').forEach(el => {
    el.addEventListener('click', e => {
      e.preventDefault();
      const isMobile = /Android|iPhone|iPad|iPod/i.test(navigator.userAgent);
      const link = isMobile
        ? (el as HTMLElement).dataset.mailto
        : (el as HTMLElement).dataset.gmail;
      window.location.href = link ?? '';
    });
  });
</script>

<div class="contact">
  <a
  href={mailtoUrl}
  data-mailto={mailtoUrl}
  data-gmail={gmailUrl}
  class="contact__container">
    <Peace class="contact__image" />
    <p class="contact__ask">¿Crees que vibramos?</p>
    <p class="contact__text">Get in touch</p>
  </a>
  <div class="contact__labels-container">
    <a href="#projects" class="contact__labels-container__label">proyectos</a>
    <a href="https://www.linkedin.com/in/andrea-montero-hernandez/" target="_blank" class="contact__labels-container__label">linkedin</a>
    <a href="#capitulos" class="contact__labels-container__label">experiencia</a>
  </div>
</div>

<style lang="scss" scoped>
  .contact {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 5rem 2.5rem;
    margin-bottom: 10rem;

    &__container {
      background-color: $color-red;
      color: $color-white;
      width: 100%;
      // height: 31.5rem;
      padding: 4rem 6rem;
      border-radius: 4rem;
      text-align: center;
      font-family: $font-poppins;
      // padding-inline: 6rem;
      text-decoration: none;

      &:hover {
        background-color: $color-turquoise;
        color: $color-black;
        cursor: pointer;
      }
    }

    &__image {
      width: 4rem;
      height: auto;
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    &__ask {
      font-size: $font-size-xl;
      margin: 0;
    }

    &__text {
      margin: 0;
      font-size: clamp(2.5rem, 10vw, 14rem);
    }

    &__labels-container{
      display: grid;
      grid-template-columns: auto auto auto auto;
      grid-gap: 2rem;
      font-family: $font-poppins;


      &__label {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: $color-red-light;
        border-radius: 0 0 15px 15px;
        text-decoration: none;
        color: $color-black;
        width: 8rem;
        height: 5rem;
        font-size: $font-size-base;
        transition: all 0.3s ease;

        &:hover {
          height: 5.5rem;
          background-color: $color-turquoise;
        }
      }
    }

    /* Tablets */
    @media (max-width: 1024px) {
      margin: 2rem 0;

      &__text {
        font-size: 5rem;
      }
    }

    /* Móviles */
    @media (max-width: 768px) {
      margin-bottom: 4rem;

      &__container {
        width: 100%;
        height: auto;
        padding: 2rem;

      }

      &__image {
        width: 2.5rem;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
      }

      &__ask {
        font-size: $font-size-md;
        width: 100%;
        margin-bottom: 0.5rem;
      }

      &__text {
        font-size: $font-size-2xl;
        width: 100%;
      }

      &__labels-container{
      grid-template-columns: auto auto auto;
      grid-gap: 0.5rem;


      &__label {
        width: 4.5rem;
        height: 3rem;
        font-size: $font-size-xs;
      }
    }
    }
  }
</style>