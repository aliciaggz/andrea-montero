---
import peace from '@/assets/peace.png';

---

<div class="contact">
  <div class="contact__container">
    <img class="contact__image" src={peace.src} alt="peace-hand">
    <p class="contact__ask">¿Crees que vibramos?</p>
    <p class="contact__text">Get in touch </p>
  </div>
  <div class="contact__labels-container">
    <a href="#projects" class="contact__labels-container__label">proyectos</a>
    <a href="https://www.linkedin.com/in/andrea-montero-hernandez/" target="_blank" class="contact__labels-container__label">linkedin</a>
    <a href="#capitulos" class="contact__labels-container__label">experiencia</a>
  </div>
</div>

<style lang="scss" scoped>
  .contact {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 5rem 2.5rem;
    margin-bottom: 10rem;

    &__container {
      background-color: $color-red;
      color: $color-white;
      width: 100%;
      height: 31.5rem;
      border-radius: 4rem;
      text-align: center;
      font-family: $font-poppins;

      &:hover {
        background-color: rgb(35, 89, 160);
        cursor: pointer;
      }
    }

    &__image {
      width: 4rem;
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    &__ask {
      font-size: $font-size-xl;
      margin: 0;
    }

    &__text {
      margin: 0;
      font-size: 11.25rem;
    }

    &__labels-container{
      display: grid;
      grid-template-columns: auto auto auto auto;
      grid-gap: 2rem;
      font-family: $font-poppins;


      &__label {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: $color-red-light;
        border-radius: 0 0 15px 15px;
        text-decoration: none;
        color: $color-black;
        width: 8rem;
        height: 5rem;
        font-size: $font-size-base;
        transition: all 0.3s ease;

        &:hover {
          background-color: $color-blue-light;
          height: 6rem; 
        }
      }
    }

    /* Tablets */
    @media (max-width: 1024px) {
      margin: 2rem 0.5rem;

      &__text {
        font-size: 1.25rem;
        width: 70%;
        top: 50%;
      }
    }

    /* Móviles */
    @media (max-width: 640px) {
      margin: 2rem 0.5rem;

      &__container {
        width: 21rem;
        height: 18rem;
      }

      &__image {
        width: 3rem;
      }

      &__ask {
      font-size: $font-size-md;
      }

      &__text {
        font-size: $font-size-sm;
      }

      &__labels-container{
      grid-template-columns: auto auto auto;
      grid-gap: 0.5rem;


      &__label {
        width: 4.5rem;
        height: 3rem;
        font-size: $font-size-xs;
      }
    }
    }
  }
</style>