---
const { 
  logo,
  title, 
  titleMethodology, 
  phases, 
  } = Astro.props;

import BoxPhase from './BoxPhase.astro';
---

<section class="project-phases">
  <h3 class="project-phases_title">{titleMethodology}</h3>
  <div class="project-phases__box-container">
    {phases.map((phase:any) => (
      <BoxPhase color={phase.color} icon={phase.icon} text={phase.text} />
    ))}
  </div> 
</section>

<style lang="scss" scoped>

.project-phases {

  &__box-container {
    display: flex;
    gap: 4rem;
    // margin-top: 2rem;
  }


}

</style>
