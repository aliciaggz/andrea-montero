---
export interface Props {
  headerText: string;
  headerColor?: string; 
  rows: string[];
}

const { headerText, headerColor = "#FDC51E", rows } = Astro.props;
---

<section class="table-block">
  <header class="table-header" style={`--header-color:${headerColor}`}>
    <h3>{headerText}</h3>
  </header>

  <div class="table-body">
    {rows.map((row) => (
      <div class="table-row">
        <p>{row}</p>
      </div>
    ))}
  </div>
</section>

<style lang="scss" scoped>
.table-block {
  width: 100%;
  max-width: 15rem;
  // max-height: 18rem;
  border-radius: 0.32rem;
  overflow: hidden;
  background-color: $color-white;
  font-family: $font-poppins;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.table-header {
  background-color: var(--header-color);
  padding: 1rem;
  color: $color-white;;
  font-weight: 600;
  text-align: center;


  h3 {
    margin: 0;
    font-size: $font-size-base;
  }
}

.table-body {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
}

.table-row {
  padding: 1rem;
  border-top: 1px solid rgba(0,0,0,0.08);
  font-size: 1rem;
  line-height: 1.4;
  color: #333;

  &:first-child {
    border-top: none;
  }

  p {
    margin: 0;
    font-size: $font-size-sm;

  }
}

/* Responsive */
@media (max-width: 600px) {
  .table-block {
    max-width: 100%;
  }
  .table-header h3 {
    font-size: 1rem;
  }
}
</style>
