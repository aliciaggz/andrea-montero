---
import Welcome from '../../components/Welcome.astro';
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import lexy from '@/assets/lexy-logo.png';
import pomodogMockup from '@/assets/pomodog-mockup.png';

import ProjectHeader from '@/components/molecules/projects/ProjectHeader.astro';


const gridItems = [
  { title: 'Habilidad', text: 'UX Research, UI Design, Prototyping, Testing' },
  { title: 'Metodología', text: 'Diseño UX/UI' },
  { title: 'Herramientas', text: 'Figma, Clickup, Maze, Hotgar' },
  { title: 'Servicio', text: 'Proyecto laboral, Plataforma SaaS Responsive' },
];

const details = [
  { title: 'Challenge', text: 'El desafío fue rediseñar la plataforma para que la experiencia de los usuarios al interactuar con ella  fuese un proceso sencillo, intuitivo y fluido, facilitando que los usuarios aprovecharan todas las funcionalidades de Lexy sin frustraciones.' },
  { title: 'Objetivo', text: 'Diseñar una experiencia unificada, moderna y clara que conecte las diferentes funcionalidades; chat con IA, generación de imágenes, planificación, analíticas y recomendaciones en una interfaz coherente, accesible y motivadora para el usuario.' },
];


// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<ProjectLayout currentProjectId={3}>
  <ProjectHeader 
  logo={lexy}
  widthLogo={10}
  title="Pomodog"
  text="Plataforma con IA que permite a empresas crear, programar, recomendar y optimizar contenido para redes sociales"
  mockup={pomodogMockup}
  items={gridItems}
  details={details}
  metodologyText="El proceso de investigación y diseño de la plataforma se realizó mediante la metodología Design Thinking, un enfoque centrado en el usuario que permite comprender necesidades, generar ideas y prototipar soluciones de manera iterativa."
  mockupImage={pomodogMockup}/>
</Layout>
