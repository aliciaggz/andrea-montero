---
import Welcome from '../../components/Welcome.astro';
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import posada from '@/assets/hotel-logo.png';
import pomodogMockup from '@/assets/pomodog-mockup.png';

import ProjectHeader from '@/components/molecules/projects/ProjectHeader.astro';


const gridItems = [
  { title: 'Habilidad', text: 'Heuristic Review, Accessibility, UI Design, Prototypingg' },
  { title: 'Metodología', text: 'Diseño UX/UI' },
  { title: 'Herramientas', text: 'Figma' },
  { title: 'Servicio', text: 'Rediseño Web Design' },
];

const details = [
  { title: 'Challenge', text: 'El sitio web necesitaba un diseño actualizado y moderno que resolviera los problemas de usabilidad y mejorara la experiencia general del usuario. La navegación no era clara, la información era difícil de encontrar y la estructura no facilitaba la navegación.' },
  { title: 'Objetivo', text: 'Optimizar la arquitectura de la información y el diseño visual para ofrecer una navegación fluida, intuitiva y accesible. El objetivo fue mejorar la retención de usuarios y reflejar una identidad digital más actual y coherente.' },
];

---

<ProjectLayout currentProjectId={4}>
  <ProjectHeader 
  logo={posada}
  title="Pomodog"
  text="La Posada San Martín es <strong>un alojamiento situado en Cuenca.</strong> Su sitio web necesitaba un rediseño para <strong>mejorar la usabilidad</strong>"
  mockup={pomodogMockup}
  items={gridItems}
  details={details}
  metodologyText="Se aplicó un análisis heurístico para identificar problemas de usabilidad y definir oportunidades de mejora. A través de los principios de Nielsen, se evaluaron la consistencia visual, la visibilidad del estado del sistema, el control del usuario y la correspondencia entre el diseño y el modelo mental del usuario."
  mockupImage={pomodogMockup}
  colorFirstText="#9C0000"/>
</Layout>
