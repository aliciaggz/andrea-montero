---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import homiLogo from '@/assets/homi-logo.png';
import pomodogMockup from '@/assets/pomodog-mockup.png';
import { Image } from 'astro:assets';

import ProjectHeader from '@/components/molecules/projects/ProjectHeader.astro';
import ProjectCases from '@/components/molecules/projects/ProjectCases.astro';
import ProjectPhases from '@/components/molecules/projects/ProjectPhases.astro';
import Carousel from '@/components/atoms/Carousel.vue';
import TableBlock from '@/components/atoms/TableBlock.astro';

import heart from '@/assets/heart.svg';
import lens from '@/assets/lens.svg';
import pencil from '@/assets/pencil.svg';
import phone from '@/assets/phone.svg';
import bulb from '@/assets/bulb.svg';

import pomodogMk1 from '@/assets/pomodog-mk-1.png';
import pomodogMk2 from '@/assets/pomodog-mk-2.png';
import pomodogMk3 from '@/assets/pomodog-mk-3.png';
import pomodogMk4 from '@/assets/pomodog-mk-4.png';
import pomodogMk5 from '@/assets/pomodog-mk-5.png';
import pomodogMk6 from '@/assets/pomodog-mk-6.png';
import pomodogMk7 from '@/assets/pomodog-mk-7.png';
import pomodogMk8 from '@/assets/pomodog-mk-8.png';
import pomodogMk9 from '@/assets/pomodog-mk-9.png';
import pomodogMk10 from '@/assets/pomodog-mk-10.png';
import pomodogMk11 from '@/assets/pomodog-mk-11.png';
import pomodogMk12 from '@/assets/pomodog-mk-12.png';

const gridItems = [
  { title: 'Habilidad', text: 'UX Research, UI Design, Prototyping, Testing' },
  { title: 'Metodología', text: 'Diseño UX/UI' },
  { title: 'Herramientas', text: 'Figma, Whimsical, Maze' },
  { title: 'Servicio', text: 'Diseño UX/UI, Mobile Design' },
];

const details = [
  { title: 'Challenge', text: 'Debido a la situación actual del mercado de la vivienda, en España el 70% de los jóvenes que se independizan optan por compartir piso, una solución práctica que, sin embargo, puede generar conflictos derivados de diferentes hábitos y estilos de vida' },
  { title: 'Objetivo', text: 'Diseñar una solución digital que facilite la convivencia entre compañeros de piso, mejorando la comunicación, la organización y la gestión de tareas compartidas para reducir conflictos y crear un entorno más equilibrado y positivo' },
];

const phasesBox = [
  {
    icon: heart,
    color: 'var(--color-blue-light)',
    text: 'Empatizar',
  },
  {
    icon: bulb,
    color: 'var(--color-blue-light)',
    text: 'Idear',
  },
  {
    icon: pencil,
    color: 'var(--color-blue-light)',
    text: 'Decidir',
  },
  {
    icon: phone,
    color: 'var(--color-blue-light)',
    text: 'Prototipar',
  },
  {
    icon: lens,
    color: 'var(--color-blue-light)',
    text: 'Testear',
  },
];

const points = [
  {
    title: "Identidad visual cálida y acogedora:",
    text: "Los colores suaves y los acentos vibrantes transmiten cercanía y energía. Homi se siente como un hogar: organizado, pero lleno de vida.",
  },
  {
    title: "Pantallas que invitan a participar:",
    text: "Cada sección —actividades, gastos, perfil y chat— está diseñada para ser clara y motivadora. La interfaz guía sin imponerse, fomentando la colaboración entre compañeros de piso.",
  },
  {
    title: "Construido como un sistema:",
    text: "Bloques modulares y consistentes que funcionan en todas las pantallas. Escalable, sencillo y adaptable a nuevas funcionalidades.",
  },
  {
    title: "Gamificación que conecta:",
    text: "Puntos, recompensas y logros transforman la rutina en motivación. Cada interacción suma, reforzando dinámicas positivas y la sensación de comunidad.",
  },
]

const imagesMasonry = [
  { src: pomodogMk1, alt: 'Imagen 1 de Pomodog' },
  { src: pomodogMk2, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk3, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk4, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk5, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk6, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk7, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk8, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk9, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk10, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk11, alt: 'Imagen 2 de Pomodog' },
  { src: pomodogMk12, alt: 'Imagen 2 de Pomodog' },


];

const phasesData = [
  {
    title: "Fase 1: Empatizar",
    titleWrapper: "Generación de hipótesis",
    text: "Nos enfocamos en entender el reto y el contexto, formulando preguntas clave para guiar el proceso.",
    text2: "Realizamos brainstorming, creamos un journey map para visualizar la experiencia del usuario, definimos oportunidades con “How might we?” y desarrollamos perfiles de personas que representan a nuestros usuarios.",
    tables: [
      { 
        rows: [ 
          "Si los usuarios cuidan un cachorro virtual mientras usan la técnica Pomodoro",
          "Aumentarán su tiempo de concentración",
        ],
        headerText: "Hipótesis de producto" },
      { 
        rows: [
          "Si la app conecta la productividad con el bienestar animal",
          "Aumentará la retención de usuarios"
        ], 
        headerText: "Hipótesis de negocio", 
        headerColor: "var(--color-blue-electric)" 
      },
      { 
        rows: [
          "Si el usuario recibe feedback visual y emocional del cachorro",
          "Sentirá motivación para completar sesiones de Pomodoro"
        ], 
        headerText: "Hipótesis de experiencia" },
    ],
  },
  {
    title: "Fase 2: Idear",
    titleWrapper: "Construcción de MVP",
    text: "Exploramos referencias y soluciones existentes mediante lightning demos y definimos la identidad corporativa. Y, terminamos con un repaso general y aplicamos la técnica Crazy 8s para generar distintas ideas y enfoques creativos.",
    reverse: true,
    tables: [
      { 
        rows: [ 
          "Temporizador Pomodoro: funcional y personalizable",
          "Cachorro virtual básico: crecimiento ligado a sesiones completadas",
          "Feedback visual y recompensas: animaciones y mensajes motivadores al completar Pomodoro"
        ],
        headerText: "Funcionalidades claves" },
      { 
        rows: [
          "Se descartaron funciones secundarias como personalización avanzada de cachorros o integración social hasta validar el MVP",
        ], 
        headerText: "Decisiones importantes", 
        headerColor: "var(--color-blue-electric)" 
      },
    ],
  },
  {
    title: "Fase 3: Diseño rápido y creación de prototipos",
    titleWrapper: "Prototipo",
    text: "En esta fase se realizaron prototipos iterativos para validar la experiencia de usuario antes de desarrollar el producto completo con la herramienta Figma.",
  },
  {
    title: "Fase 4: Testear",
    titleWrapper: "Testing",
    text: "Se realizaron tests de usabilidad y motivación para validar si las hipótesis se cumplían y la experiencia era efectiva con la herramienta Maze.",
    reverse: true,
  },
];

const images = [pomodogMk1, pomodogMk1, pomodogMk1];

---

<ProjectLayout currentProjectId={1}>
  <ProjectHeader 
  logo={homiLogo}
  title="Homi"
  text="Aplicación para promover una experiencia de convivencia positiva y organizada entre compañeros de piso"
  mockup={pomodogMockup}
  items={gridItems}
  details={details}
  metodologyText="El proceso de investigación y diseño de la aplicación se llevó a cabo mediante la metodología Design Sprint, un proceso intensivo que ayuda a resolver problemas y desarrollar soluciones eficaces de forma rápida y eficiente."
  mockupImage={pomodogMockup}/>


  <ProjectCases 
  textCaseStudy="HOMI es una app diseñada para mejorar la convivencia entre compañeros de piso a través de la gamificación y la organización compartida. Su objetivo es fomentar dinámicas positivas y equilibradas mediante actividades grupales, gestión de gastos y comunicación efectiva."
  points={points}
  images={imagesMasonry}
  title="Pomodog"
  />

  <ProjectPhases titleMethodology="Metodología Design Sprint" boxPhases={phasesBox} phases={phasesData}>

    <Fragment slot="phase1">
      {phasesData[0].tables && phasesData[0].tables.map((table) => (
        <TableBlock
          rows={table.rows}
          headerText={table.headerText}
          headerColor={table.headerColor}
        />
      ))}
    </Fragment>
  
    <Fragment slot="phase2">
        {phasesData[1].tables && phasesData[1].tables.map((table) => (
          <TableBlock
            rows={table.rows}
            headerText={table.headerText}
            headerColor={table.headerColor}
          />
        ))}
    </Fragment>
  
    <Fragment slot="phase3">
    </Fragment>

    <Fragment slot="phase4">
      <Carousel slides={images} autoplay :interval="4000" client:load>
        <Fragment slot="slide-0">
          <Image  width={200} src={images[0]} alt="Slide 1" />
        </Fragment>
        <Fragment slot="slide-1">
          <Image width={200}  src={images[1]} alt="Slide 1" />
        </Fragment>
        <Fragment slot="slide-2">
          <Image width={200}  src={images[2]} alt="Slide 1" />
        </Fragment>
      </Carousel>      </Fragment>

  </ProjectPhases>

</Layout>
